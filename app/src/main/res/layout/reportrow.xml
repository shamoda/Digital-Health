<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="319dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#00D4CD"


        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/CusID"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="81dp"
                android:layout_marginTop="8dp"
                android:text="0773551879"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/patientName"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/CusID"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="39dp"
                android:text="Patient Name :"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/patientname"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/CusID"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="89dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="38dp"
                android:text="Senath Sadeesha Weerasinghe"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/IssuedDate"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_below="@+id/CusID"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="163dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="12dp"
                android:text="12 May 2020"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/issuedDate"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/CusID"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="250dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="14dp"
                android:text="6.30 PM"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ReportIDtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/patientName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="163dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="78dp"
                android:text="Report ID :"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reportID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/patientName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="225dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="77dp"
                android:text="Report ID :"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/CusIDtext"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/patientName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-3dp"
                android:layout_marginEnd="229dp"
                android:layout_marginBottom="77dp"
                android:text="@string/CustomerID"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>