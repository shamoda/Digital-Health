<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMRcalculatorActivity">

    <Toolbar
        android:id="@+id/ar_bmr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmrcalc"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close_btn"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                />


        </RelativeLayout>

    </Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ar_bmr_toolbar"
        android:text="@string/bmrcalc"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_alignParentStart="true"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/ar_bmr_toolbar"
    android:layout_marginTop="80dp"
    android:background="@drawable/input_design"
    android:layout_marginBottom="90dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="6dp"
    >

        <TextView
            android:id="@+id/ar_bmr_tage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:text="@string/age"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />


        <EditText
            android:id="@+id/ar_bmr_age"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ar_bmr_tage"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agerange"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/ar_bmr_age"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ar_bmr_age"
        >
    <TextView
        android:id="@+id/ar_bmr_tgen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:text="@string/gender"

        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />


    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/ar_bmr_gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ar_bmr_tgen"
        android:layout_marginTop="30dp"

        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ar_bmr_option1"
            android:text="@string/male"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ar_bmr_option2"
            android:text="@string/female"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ar_bmr_tgen"
        >
    <TextView
        android:id="@+id/ar_bmr_tweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:text="@string/weight"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />


    <EditText
        android:id="@+id/ar_bmr_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ar_bmr_tweight"
        android:background="@drawable/input_design"
        android:padding="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ar_bmr_tweight">
        <TextView
            android:id="@+id/ar_bmr_theight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:text="@string/height"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />


        <EditText
            android:id="@+id/ar_bmr_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ar_bmr_theight"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ar_bmr_height"
        android:layout_marginLeft="40dp"    >

            <Button
                android:id="@+id/ar_bmr_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:padding="17dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/calculate"
                android:textColor="@android:color/white"
                />
        <Button
            android:id="@+id/ar_bmr_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ar_bmr_calculate"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttons"
            android:padding="17dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="@string/clear"
            android:textColor="@android:color/white"
            />


    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>

</RelativeLayout>

</RelativeLayout>

</RelativeLayout>