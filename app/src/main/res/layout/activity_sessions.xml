<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_design">

            <ImageView
                android:id="@+id/ak_session_list_calendar_img"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@drawable/calendar"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                />

            <TextView
                android:id="@+id/ak_session_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/session_date"
                android:layout_toRightOf="@+id/ak_session_list_calendar_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <ImageView
                android:id="@+id/ak_session_list_clock_img"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@drawable/clock"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/ak_session_list_date"
                />

            <TextView
                android:id="@+id/ak_session_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/session_time"
                android:layout_toRightOf="@+id/ak_session_list_clock_img"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/ak_session_list_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/session_day"
                android:layout_below="@+id/ak_session_list_calendar_img"
                android:layout_marginLeft="35dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/ak_session_list_active_patients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_of_active_patients"
                android:layout_below="@+id/ak_session_list_day"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/ak_session_list_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ak_session_list_active_patients"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="@string/session_available_btn"
                />



    </RelativeLayout>

    </androidx.cardview.widget.CardView>

