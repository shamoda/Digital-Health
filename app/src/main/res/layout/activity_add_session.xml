<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSessionActivity">

    <Toolbar
        android:id="@+id/ak_add_session_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/session_information"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/ak_add_session_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close_btn"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                />
        </RelativeLayout>
    </Toolbar>

    <TextView
        android:id="@+id/ak_add_session_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ak_add_session_toolbar"
        android:text="@string/add_new_session"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/ak_add_session_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_doctor_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ak_add_session_text"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/ak_add_session_insert_doctor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ak_add_session_doctor_name"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/ak_add_session_doctor_specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/doctor_specialization"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ak_add_session_insert_doctor_name"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/ak_add_session_insert_doctor_specialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ak_add_session_doctor_specialization"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/ak_add_session_doctor_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_date"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ak_add_session_insert_doctor_specialization"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        />

    <Spinner
        android:id="@+id/ak_add_session_day_spinner"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/ak_add_session_doctor_date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />
    <Spinner
        android:id="@+id/ak_add_session_month_spinner"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/input_design"
        android:layout_toRightOf="@+id/ak_add_session_day_spinner"
        android:layout_below="@id/ak_add_session_doctor_date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />
    <Spinner
        android:id="@+id/ak_add_session_year_spinner"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/input_design"
        android:layout_toRightOf="@+id/ak_add_session_day_spinner"
        android:layout_toEndOf="@+id/ak_add_session_month_spinner"
        android:layout_below="@id/ak_add_session_doctor_date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/ak_add_session_no_of_patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_of_patients"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ak_add_session_year_spinner"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/ak_add_session_insert_no_of_patients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ak_add_session_no_of_patients"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/ak_add_session_session_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_time"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ak_add_session_insert_no_of_patients"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/ak_add_session_insert_session_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ak_add_session_session_time"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />


    <Button
        android:id="@+id/ak_add_session_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ak_add_session_insert_session_time"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="@string/submit_btn"
        android:textColor="@android:color/white"
        />


</RelativeLayout>