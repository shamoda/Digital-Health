<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical"
    tools:context=".AdminDashboard"


    >



    <Toolbar
        android:id="@+id/sm_bmi_calculator_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:drawableRight="@drawable/ic_logout"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                />

        </RelativeLayout>



    </Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"


        >

        <androidx.cardview.widget.CardView
            android:id="@+id/Card1"
            android:layout_width="156dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_margin="25dp"


            android:background="#E1B6B6"
            android:backgroundTint="#EFD4D4"
            app:cardBackgroundColor="#D5CDCF"
            app:cardCornerRadius="10dp"
            app:cardElevation="100dp">


            <TextView
                android:id="@+id/Docs"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:fontFamily="casual"
                android:text="@string/docaNo"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="92dp"
                android:layout_height="64dp"
                android:layout_marginTop="50dp"
                android:layout_margin="45dp"


                android:text="@string/countDocs"
                android:textColor="@color/cardview_dark_background"
                android:textSize="36sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Card2"
            android:layout_width="154dp"
            android:layout_height="120dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_margin="25dp"


            android:background="#E1B6B6"
            android:backgroundTint="#EFD4D4"
            app:cardBackgroundColor="#D5CDCF"
            app:cardCornerRadius="10dp"
            app:cardElevation="100dp">


            <TextView
                android:id="@+id/Cus"
                android:layout_width="165dp"
                android:layout_height="96dp"
                android:fontFamily="casual"
                android:text="@string/cusNo"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="94dp"
                android:layout_height="81dp"
                android:layout_margin="45dp"


                android:text="@string/cusCount"
                android:textColor="@color/cardview_dark_background"
                android:textSize="36sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"

    >

    <Button
        android:id="@+id/Customer"
        android:layout_width="387dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"

        android:background="@color/button"
        android:drawableLeft="@drawable/ic_user"
        android:drawableTint="#FFFFFF"

        android:elevation="30dp"
        android:paddingStart="50dp"
        android:paddingEnd="100dp"
        android:shadowRadius="4dp"
        android:text="Manage Customers"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Doca"
        android:layout_width="387dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"

        android:background="@color/button"
        android:drawableLeft="@drawable/ic_doctors"
        android:elevation="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="100dp"
        android:text="Manage Doctors"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sess"
        android:layout_width="387dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@color/button"
        android:drawableLeft="@drawable/ic_appointments"
        android:elevation="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="100dp"
        android:text="Manage Sessions"
        android:textSize="18sp" />

    <Button
        android:id="@+id/appo"
        android:layout_width="356dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@color/button"

        android:drawableLeft="@drawable/ic_appointments"
        android:elevation="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="80dp"
        android:text="Manage Appointments"
        android:textSize="18sp" />

    <Button
        android:id="@+id/reports"
        android:layout_width="359dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@color/button"


        android:drawableLeft="@drawable/ic_reports"
        android:elevation="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="100dp"

        android:text="Manage Reports"
        android:textSize="18sp" />

</LinearLayout>


</LinearLayout>